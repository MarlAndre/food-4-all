<div class="navbar fixed-bottom navbar-expand-sm navbar-light navbar-lewagon py-3">
  <%# 4 icons + one collapse button in the navbar %>
  <div class="container-fluid">
    <a href="/"><i class="fas fa-home"></i></a>
    <a href="#"><i class="fas fa-search"></i></a>
    <a href="#"><i class="far fa-plus-square"></i></a>
    <a href="#"><i class="far fa-comment"></i></a>

    <%# collapse button shows the avatar image (for the demo user only) or a normal icon (for everyone else) %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <% if current_user == User.first %>
        <%= image_tag "demo_user.png", class: "avatar dropdown-toggle text-white", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% else %>
        <a href="#" class="avatar dropdown-toggle text-white" id="navbarDropdown" data-bs_toggle="dropdown" aria-haspopup=true aria-expanded=false>
          <i class="far fa-user"></i>
        </a>
      <% end %>
    </button>

    <%# collapse menu to show 'Login' or 'Log out' option. %>
    <div class="collapse navbar-collapse my-1" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Log out", destroy_user_session_path, method: :delete %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
