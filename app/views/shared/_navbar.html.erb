<div class="navbar fixed-bottom navbar-expand-sm navbar-light navbar-lewagon">
  <%# 4 icons + one collapse button in the navbar %>
  <div class="container-fluid ps-4">
    <%= active_link_to root_path, active: :exact do %>
      <i class="fas fa-map-marker-alt"></i>
    <% end %>
    <%= active_link_to items_path, active: :exact do %>
      <i class="fas fa-search"></i>
    <% end %>
    <%= active_link_to new_item_path, active: :exact do %>
      <i class="far fa-plus-square"></i>
    <% end %>
    <%= active_link_to requests_path, active: :exact do %>
      <i class="far fa-comment"></i>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <%= link_to "#", class: "dropdown-toggle text-white", id: "navbarDropdown", data_bs_toggle: "dropdown", aria_haspopup: true, aria_expanded: false do %>
        <i class="far fa-user"></i>
      <% end %>
    </button>

    <%# collapse menu to show 'Login' or 'Log out' option. %>
    <div class="collapse navbar-collapse my-1" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto text-end">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= active_link_to my_profile_path, active: :exact do %>
              <span>My Profile</span>
            <% end %>
          </li>
          <li class="nav-item">
            <%= active_link_to "Log out", destroy_user_session_path, method: :delete, active: :exact %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= active_link_to "Login", new_user_session_path, active: :exact %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
