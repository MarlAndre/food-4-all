                  <img src="https://images.unsplash.com/photo-1554136383-fa88b2d86aaf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=928&q=80" alt="">
                <% end %>

                <div class="card-product-infos">
                  <h2><%= item.name.capitalize %></h2>
                  <h3><%= truncate(item.description, :length => 93) %></h3>
                  <p><i class=“fas fa-map-marker-alt”></i>&nbsp<%= item.user.address %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        "You haven't donate yet"
      <% end %>
      </div>
  <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
          <% if @my_donated_items %>

        <div class="cards items" id="cards-items">

          <% @my_donated_items.each do |item| %>
