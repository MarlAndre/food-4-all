<h1>My items</h1>
<br>

<nav>
  <div class="nav nav-tabs tabs-underlined" id="nav-tab" role="tablist">
    <button class="nav-link tab-underlined active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Available</button>
    <button class="nav-link tab-underlined" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Reserved</button>
    <button class="nav-link tab-underlined" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">Donated</button>
  </div>
</nav>

<br>

<div class="tab-content" id="nav-tabContent">
  <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
        <% if @my_available_items %>

        <div class="cards items" id="cards-items">

          <% @my_available_items.each do |item| %>
            <%= link_to item_path(item), class: "text-decoration-none" do%>

              <div class="card-product">
                <% if item.photos.attached? %>
                  <%= cl_image_tag item.photos.first.key, width: "100%", height: 400 %>
                <% else %>
                  <img src="https://images.unsplash.com/photo-1554136383-fa88b2d86aaf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=928&q=80" alt="">
                <% end %>

                <div class="card-product-infos">
                  <h2><%= item.name.capitalize %></h2>
                  <h3><%= truncate(item.description, :length => 93) %></h3>
                  <p><i class=“fas fa-map-marker-alt”></i>&nbsp<%= item.user.address %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        "You haven't donate yet"
      <% end %>
      </div>

  <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
        <% if @my_reserved_items %>

        <div class="cards items" id="cards-items">

          <% @my_reserved_items.each do |item| %>
