<div class="container-fluid mb-5 pb-5">

<div class="container-carrusel">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner">
      <div class="carousel-item active">
        <% @item.photos.each do |photo| %>
          <img class="d-block w-100" src="<%= cl_image_tag photo.key %>" alt="First slide">
        <% end %>
      </div>


      <%# <div class="carousel-item" url("pe= cl_image_tag @item.photo.key pe")>
        <img class="d-block w-100" src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?crop=entropy&cs=tinysrgb&fm=jpg&ixlib=rb-1.2.1&q=80&raw_url=true&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940" alt="Second slide">
      </div> %>


      <div class="carousel-item">
        <img class="d-block w-100" src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?crop=entropy&cs=tinysrgb&fm=jpg&ixlib=rb-1.2.1&q=80&raw_url=true&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940" alt="Second slide">
      </div>

      <div class="carousel-item">
        <img class="d-block w-100" src="https://images.unsplash.com/photo-1473093295043-cdd812d0e601?crop=entropy&cs=tinysrgb&fm=jpg&ixlib=rb-1.2.1&q=80&raw_url=true&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770" alt="Third slide">
      </div>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="social-media">
    <p class="distance"># km away</p>
    <div class="d-flex">
      <%# <p><i class="fas fa-thumbs-up"></i></p> %>
      <a href="#"><i class="fas fa-thumbs-up"></i></a>
      <%# <p><i class="fas fa-share-alt"></i></p> %>
      <a href="#"><i class="fas fa-share-alt"></i></a>
    </div>
  </div>

  <div class="availability">
    <% if @item.status %> Available </p>
    <% else %>
      <p>Not available</p>
    <% end %>
  </div>

</div>

  <br>

  <div class="container-detail">

    <div class="card-user">

      <img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/cveneziani" />

      <div class="card-description">
        <p class="item-name">From <%= @item.name %></p>
        <p class="username"> <%= @item.user.username %></p>
      </div>

    </div>

    <ul class="details">
      <li>Listed on: <%= @item.created_at.strftime("%b %e") %></li>
      <li>Expiration date: <%= @item.expiration_date.strftime("%b %e") %></li>
      <li>Description: <%= @item.description %></li>

      <% @diets.each do |diet| %>
        <li><%= diet.name  %></li>
      <% end %>

      <% @allergens.each do |allergen|  %>
        <li><%= allergen.name  %></li>
      <% end %>
    </ul>

  </div>

   <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1569336415962-a4bd9f69cd83?crop=entropy&cs=tinysrgb&fm=jpg&ixlib=rb-1.2.1&q=80&raw_url=true&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2062);height: 200px;">
  </div>

  <br>

  <div>
    <%# button to link to request; using our own .button class %>
    <% if Request.find_by(item_id: @item.id, receiver_id: current_user.id, giver_id: @item.user.id) %>
      <div class="button reserve">
        <%= link_to 'Continue The Chat', request_path(@request) %>
      </div>
    <% else %>
      <%= simple_form_for @request do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.submit 'Reserve This Item', class: "button reserve" %>
      <% end %>
    <% end %>
  </div>

  <div class="btn btn-primary btn-block">
     <%= link_to 'Back', items_path %>
  </div>
</div>
