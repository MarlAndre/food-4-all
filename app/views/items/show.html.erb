<div class="container-fluid mb-5 pb-5 container-custom-full-width">

  <div class="container-carousel">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% @item.photos.each_with_index do |photo, index| %>
        <% if index == 0 %>
          <div class="carousel-item active">
            <%= cl_image_tag photo.key, width: "100%", height: 400 %>
          </div>
          <% else %>
            <div class="carousel-item">
              <%= cl_image_tag photo.key, width: "100%", height: 400 %>
          </div>
          <% end %>
        <% end %>
      </div>

      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>

      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>

    <div class="d-flex">
      <p class="distance"># km away</p>

      <div class="social-media">
        <a href="#"><i class="fas fa-thumbs-up"></i></a>
        <a href="#"><i class="fas fa-share-alt"></i></a>
      </div>
    </div>

    <div class="availability">
      <%= @item.status.capitalize %>
    </div>
  </div>

  <br>

  <div class="container-detail">

    <div class="card-user">
      <% if @item.user == User.first %>
        <%= image_tag "demo_user.png", class: "avatar" %>
      <% else %>
        <img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/cveneziani" />
      <% end %>

      <div class="card-description">
        <p class="item-name"> <%= @item.name.capitalize %></p>
        <p class="username">From <%= @item.user.username %></p>
      </div>
    </div>

    <ul class="details">
      <li>Listed on: <%= @item.created_at.strftime("%b %e") %></li>
      <li>Expiration date: <%= @item.expiration_date.strftime("%b %e") %></li>
      <li>Description: <%= @item.description %></li>

      <% @diets.each do |diet| %>
        <li>It may contains: <%= diet.name %></li>
      <% end %>

      <% @allergens.each do |allergen| %>
        <li>Allergen: <%= allergen.name %></li>
      <% end %>
    </ul>
  </div>

  <div class="card-category">
    <%# Geocoder map %>
    <div
      id="map"
      style="width: 100%;
      height: 400px;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
      >
    </div>
  </div>

  <br>

  <div>
    <%# owner cannot request for his/her own items. %>
    <% if @item.user == current_user %>
      <em>You cannot book your own items.</em>
    <% else %>
      <%# button to link to request; using our own .button class %>
      <% if Request.find_by(item_id: @item.id, receiver_id: current_user.id, giver_id: @item.user.id) %>
        <div class="button reserve">
          <%= link_to "Back to chat", request_path(@request) %>
        </div>
      <% else %>
        <%= simple_form_for @request do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.submit "Send message", class: "button reserve" %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <br>

  <div>
    <%= link_to "Back", items_path, class:"btn" %>
  </div>
</div>
