<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 shadow">
      <%= simple_form_for @item do |f| %>
        <%= f.input_field :name, placeholder: 'Name' %>
        <p></p>
        <%= f.select :item_type, Type: Item::TYPES %>
        <p></p>
        <%= f.input_field :description, placeholder: 'Description' %>
        <%# a new item must be available so giver doesn't need to see it in this form %>
        <%# <%= f.input :status, collection: Item.statuses.keys %>
        <%= f.input :expiration_date, as: :date, html5: true %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.submit %>
      <% end %>
      <%= link_to "Back", items_path %>
    </div>
  </div>
</div>
