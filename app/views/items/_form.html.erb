<div class="container">
  <div class="row justify-content-center">
    <div class="shadow">
      <%= simple_form_for @item do |f| %>
        <%= f.input :name %>
        <%= f.select :item_type, collection: Item::TYPES %>
        <%= f.input :status, collection: Item.statuses.keys %>
        <%= f.input :expiration_date, as: :date, html5: true %>
        <%= f.input :description %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
