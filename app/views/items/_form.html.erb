<div class="container px-4">
  <%= simple_form_for @item do |f| %>
    <%= f.input_field :name, placeholder: 'Name', class: 'w-100' %>
    <p></p>
    <div class="d-flex justify-content-between">
      <%= f.input_field :item_type, as: :radio_buttons, collection: Item::TYPES %>
    </div>
    <p></p>
    <%= f.input_field :description, placeholder: 'Description (minimum 10 characters)', class: 'w-100' %>
    <%# a new item must be available so giver doesn't need to see it in this form %>
    <%# <%= f.input :status, collection: Item.statuses.keys %>
    <p></p>
    <%= f.input :expiration_date, placeholder: 'Expiration date', as: :date, html5: true %>
    <p></p>
    <%= f.input_field :photos, as: :file, input_html: { multiple: true } %>
    <p></p>
    <%= f.submit 'Submit', class: 'button' %>
  <% end %>
  <%= link_to "Back", items_path %>
</div>
