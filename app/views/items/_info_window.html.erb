<h6><%= user.username.capitalize %> is giving away</h6>
<% user.items.each do |item|%>
  <p><%= link_to (item.name.capitalize), item_path(item) %></p>
  <%= cl_image_tag item.photos.first.key, width: "100%", height: 100 %>
  <% unless @allergens.empty? %>
    <i class="fas fa-exclamation-triangle"></i>
    <%= @allergens.map { |allergen| allergen.name.capitalize }.join(", ") %>
  <% end %>
  <p></p>
  <% unless @diets.empty? %>
    <i class="fab fa-envira"></i>
    <%= @diets.map { |diet| diet.name.capitalize }.join(", ") %>
  <% end %>
<% end %>
