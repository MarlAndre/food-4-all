<div class="my-favorites">
  <div class="heading">
    <h5>My Favorites</h5>
  </div>
  <div class="container my-4">
    <div class="cards items" id="cards-items">
      <% @my_favorites.each do |fav| %>
        <% item = Item.find(fav.favoritable_id) %>
        <%= link_to item_path(item), class: "text-decoration-none" do%>

          <div class="card-product">
              <%# hardcoded image for item %>
                <% if item.photos.attached? %>
                  <%= cl_image_tag item.photos.first.key, width: "100%", height: 400 %>
                <% else %>
                  <img src="https://images.unsplash.com/photo-1554136383-fa88b2d86aaf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=928&q=80" alt="">
                <% end %>

            <div class="card-product-infos">
              <h2><%= item.name.capitalize %></h2>
              <h3><%= truncate(item.description, :length => 93) %></h3>
              <p><i class="fas fa-map-marker-alt"></i> <%= item.user.address %></p>
            </div>
          </div>

        <% end %>
      <% end %>
    </div>
  </div>
</div>
